<%= turbo_stream.update "query_result" do %>
  <div class="query-result">
    <h3>Generated SQL Query</h3>
    
    <div class="sql-container">
      <pre class="sql-code"><%= @query.statement %></pre>
      
      <div class="query-actions">
        <%= form_with url: run_query_path(id: @query.id || "temp"), method: :post, local: false do |f| %>
          <%= hidden_field_tag "query[sql]", @query.statement %>
          <%= hidden_field_tag "query[question]", @question %>
          
          <div class="button-group">
            <%= f.submit "Run Query", class: "btn btn-success" %>
            <%= link_to "Copy SQL", "#", 
                class: "btn btn-secondary",
                data: { 
                  controller: "clipboard",
                  clipboard_text_value: @query.statement,
                  action: "click->clipboard#copy"
                } %>
            <% if @query.persisted? %>
              <%= link_to "View in Blazer", main_app.blazer_query_path(@query), class: "btn btn-secondary", target: "_blank" %>
            <% end %>
            <%= link_to "New Query", new_query_path, class: "btn btn-outline", data: { turbo_frame: "_top" } %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="query-metadata">
      <p class="text-muted">
        <strong>Original question:</strong> <%= @question %>
      </p>
    </div>
  </div>
<% end %>

<style>
  .query-result {
    margin-top: 30px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 8px;
  }

  .query-result h3 {
    margin-bottom: 15px;
    color: #333;
  }

  .sql-container {
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    overflow: hidden;
  }

  .sql-code {
    margin: 0;
    padding: 15px;
    background-color: #f5f5f5;
    font-family: 'Monaco', 'Consolas', monospace;
    font-size: 13px;
    line-height: 1.5;
    overflow-x: auto;
  }

  .query-actions {
    padding: 15px;
    background-color: white;
    border-top: 1px solid #e0e0e0;
  }

  .button-group {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .btn-success {
    background-color: #28a745;
    color: white;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .btn-outline {
    background-color: white;
    color: #333;
    border: 1px solid #ddd;
  }

  .btn-outline:hover {
    background-color: #f8f9fa;
  }

  .query-metadata {
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #e0e0e0;
  }
</style>